        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:paddingRight="10dp">

        <ImageView
            android:id="@+id/imageView"
            style="@style/AppTheme.Image_ListItem"/>

    </FrameLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/onlist_competition_title"
            android:text="name"
            style="@style/AppTheme.Title_ListItem"/>

        <TextView
            android:id="@+id/onlist_competition_description"

            android:text="description"
            style="@style/AppTheme.DescriptionText_ListItem"/>

