<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:minHeight="1000dp"
    tools:context="tecno.competitionplatform.activities.SubscribeActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Name"
        android:ems="10"
        android:id="@+id/subscribe_name"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_weight="1"
        android:layout_alignParentEnd="true" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Apellido"
        android:ems="10"
        android:id="@+id/subscribe_lastname"
        android:layout_below="@+id/subscribe_name"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/subscribe_country"  />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/subscribe_email"
        android:layout_below="@+id/subscribe_lastname"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/subscribe_country"
        android:hint="Email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/subscribe_password"
        android:hint="Contraseña"
        android:layout_below="@+id/subscribe_email"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp"
        android:layout_alignEnd="@+id/subscribe_email" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/subscribe_repeat_password"
        android:layout_alignParentStart="true"
        android:hint="Repetir contraseña"
        android:layout_below="@+id/subscribe_password"
        android:layout_alignParentLeft="true"
        android:layout_alignEnd="@+id/subscribe_country" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="date"
        android:ems="10"
        android:id="@+id/subscribe_dob"
        android:hint="Fecha de nacimiento"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/subscribe_repeat_password"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subscribe_country"
        android:spinnerMode="dropdown"
        android:layout_below="@+id/subscribe_dob"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscribirse"
        android:id="@+id/subscribe_button"
        android:layout_below="@+id/subscribe_country"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
