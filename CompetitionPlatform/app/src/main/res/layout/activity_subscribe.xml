<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/scrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="tecno.competitionplatform.activities.SubscribeActivity"
        android:longClickable="true"
        android:orientation="vertical">



        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:hint="Name"
            android:textColorHint="@color/hint"
            android:ems="10"
            android:textColor="#FFF"
            android:id="@+id/subscribe_name" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPersonName"
            android:hint="Apellido"
            android:textColorHint="@color/hint"
            android:ems="10"
            android:textColor="#FFF"
            android:id="@+id/subscribe_lastname" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:textColor="#FFF"
            android:id="@+id/subscribe_email"
            android:hint="Email"
            android:textColorHint="@color/hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#FFF"
            android:id="@+id/subscribe_password"
            android:hint="Contraseña"
            android:textColorHint="@color/hint"
            android:layout_marginTop="25dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:inputType="textPassword"
            android:ems="10"
            android:textColor="#FFF"
            android:id="@+id/subscribe_repeat_password"
            android:hint="Repetir contraseña"
            android:textColorHint="@color/hint"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:id="@+id/subscribe_dob"
            android:hint="Fecha de nacimiento"
            android:textColorHint="@color/hint"
            android:layout_marginTop="25dp"
            android:textColor="#FFF"
            android:text=""
            android:onClick="onClickDob" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/subscribe_country"
            android:spinnerMode="dropdown"
            android:textColor="#FFF"
            android:layout_marginTop="25dp"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Suscribirse"
            android:id="@+id/subscribe_button"
            android:paddingLeft="15dp"
            android:layout_marginTop="25dp"/>




    </LinearLayout>

</ScrollView>
