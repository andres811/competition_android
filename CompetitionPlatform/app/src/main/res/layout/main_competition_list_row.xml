<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">



    <TableRow android:layout_width="fill_parent"
        android:id="@+id/TableRow01"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/onlist_main_competition_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="name"
            android:gravity="left"
            android:typeface="monospace"
            style="@style/AppTheme.TitleList"/>
    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/onlist_main_competition_description"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="description"
            android:height="80sp"
            android:gravity="start"
            android:textColor="@color/description_text"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>


    </TableRow>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/btn_main_competition"
        android:text="Ver mÃ¡s &#8594;"  />

