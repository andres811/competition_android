<resources>


    <style name="AppTheme" parent="android:Theme.Holo.Light">
        <item name="android:actionOverflowButtonStyle">@style/AppTheme.ActionButtonOverflow</item>
        <item name="android:actionBarStyle">@style/AppTheme.ActionBar</item>

    </style>

    <style name="AppTheme.ActionButtonOverflow" parent="android:style/Widget.Holo.Light.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_perm_identity</item>
        <item name="android:background">@drawable/background_action_bar_button</item>
    </style>

    <style name="AppTheme.ActionBar" parent="android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/background</item>
        <item name="android:titleTextStyle">@style/AppTheme.ActionBar.TitleText</item>
    </style>

    <style name="AppTheme.ActionBar.TitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/normal_text</item>
    </style>

    <style name="AppTheme.TitleList" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">18dp</item>
        <item name="android:layout_marginBottom">10dp</item>

    </style>

    <style name="AppTheme.DescriptionText" parent="Base.TextAppearance.AppCompat.Large">
        <item name="android:textColor">@color/normal_text</item>
        <item name="android:textSize">18dp</item>

    </style>


</resources>
