<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TableRow android:layout_width="fill_parent"
        android:id="@+id/TableRow01"
        android:layout_height="wrap_content">

        <TextView android:textColor="#000"
            android:id="@+id/onlist_main_competition_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="name" android:textStyle="bold"
            android:gravity="left"
            android:layout_weight="1"
            android:typeface="monospace"
            android:height="60sp"
            android:textSize="20dp"/>
    </TableRow>

    <TableRow android:layout_height="wrap_content"
        android:layout_width="fill_parent">

        <TextView android:textColor="#000"
            android:id="@+id/onlist_main_competition_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_weight=".65"
            android:height="50sp"
            android:gravity="left|center"/>

        <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight=".35"
            android:textColor="#FFFFFF"
            android:gravity="right"
            android:id="@+id/btn_main_competition"
            android:text="Ver &#8594;"
            android:height="20sp" />
    </TableRow>

</TableLayout>


